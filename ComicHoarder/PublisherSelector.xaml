<UserControl x:Class="ComicHoarder.PublisherSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComicHoarder.ViewModels"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:PublisherSelectorViewModel></local:PublisherSelectorViewModel>
    </UserControl.DataContext>
    <Grid>
        <ComboBox x:Name="ddlPublisher" Height="22" Width="250"
                  SelectedValue="{Binding SelectedPublisher}"
                  DisplayMemberPath="name"
                  SelectedValuePath="id"
                  ItemsSource="{Binding Publishers}"
                  >
        </ComboBox>
    </Grid>
</UserControl>
